<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/master_node_item_ll">

    <TextView
        android:id="@+id/master_node_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="主机名称"
        android:textSize="20sp"
        android:textColor="@color/text_color"/>
    <TextView
        android:id="@+id/master_node_item_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="已连接"
        android:textSize="18sp"
        android:textColor="@color/text_color"/>
    <ImageView
        android:id="@+id/master_node_item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_account_delete_pressed"
        android:duplicateParentState="true"/>
    <ImageView
        android:id="@+id/master_node_item_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_toLeftOf="@+id/master_node_item_delete"
        android:background="@drawable/edit_btn"
        android:duplicateParentState="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"></View>

</RelativeLayout>
