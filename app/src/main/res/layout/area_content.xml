<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/area_electric_fragment_area_image"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="设备"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>
            <ImageView
                android:id="@+id/area_electric_fragment_edit_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toLeftOf="@+id/area_electric_fragment_edit_text"
                android:src="@drawable/edit_btn"/>
            <TextView
                android:id="@+id/area_electric_fragment_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_15"
                android:text="编辑"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"></View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">
        <com.jia.widget.MyGridView
            android:id="@+id/area_electric_fragment_electric_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="0.0dip"
            android:listSelector="@null"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="0.0dip"/>
    </ScrollView>



</LinearLayout>
