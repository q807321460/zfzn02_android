<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/shared_electric_item_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/shared_electric_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_account_delete"/>
        <TextView
            android:id="@+id/shared_electric_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_toRightOf="@+id/shared_electric_item_img"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:text="电器名字"/>
        <TextView
            android:id="@+id/shared_electric_item_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_toRightOf="@+id/shared_electric_item_img"
            android:layout_below="@+id/shared_electric_item_name"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/hint_text"
            android:text="所属区域"/>
        <Switch
            android:id="@+id/shared_electric_item_admin"
            android:layout_width="60dp"
            android:layout_height="40dp" 
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/margin_15"
            android:textOn=" "
            android:textOff=" "
            android:src="@drawable/left_menu_more"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_color"></View>
    </RelativeLayout>

</LinearLayout>
