<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/air_center_single_title_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_15"
                android:onClick="airCenterSingleinfoBack"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/air_center_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改空调所在房间名"
                android:textColor="@color/text_color"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:src="@drawable/center_air_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调地址:"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/air_center_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_account_img"
            android:paddingBottom="@dimen/padding_12"
            android:paddingTop="@dimen/padding_12"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textSize="18sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调房间名:"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/air_center_single_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_12"
            android:layout_below="@+id/login_account_img"
            android:singleLine="true"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调修改房间名:"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/air_center_update_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_12"
            android:selectAllOnFocus="true"
            android:layout_below="@+id/login_account_img"
            android:singleLine="true"
            android:background="@drawable/edittext_border"
            android:textSize="18sp"
            android:hint="需要修改房间名"
            android:textColorHint="@color/hint_text"
            ></EditText>
    </LinearLayout>
    <Button
        android:id="@+id/air_center_single_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:gravity="center"
        android:onClick="AirCenterNameSave1"
        android:text="保存房间名"
        android:textColor="#ffff0000"
        android:textSize="20sp" />
</LinearLayout>
