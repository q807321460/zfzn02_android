<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/devlist_layout"
				android:layout_width="match_parent"
				android:background="@color/black"
				android:layout_height="300dp">

	<TextView
		android:id="@+id/cam_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:textColor="#ffffffff"
		android:text="123"
		android:textSize="15sp" />


	<TextView
		android:id="@+id/cam_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:textColor="#ffffffff"
		android:layout_below="@+id/cam_name"
		android:text="123"
		android:textSize="13sp" />

	<ImageView
		android:id="@+id/ivScreenShot"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/cam_status"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" />
	<LinearLayout
		android:id="@+id/set_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="8dp"
		android:layout_alignParentBottom="true">
		<ImageView
			android:id="@+id/img_edit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/app_device_edit" />

		<ImageView
			android:id="@+id/img_del"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/app_remove" />

		<ImageView
			android:id="@+id/img_eventlist"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/app_event_list" />


	</LinearLayout>


</RelativeLayout>