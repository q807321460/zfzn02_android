<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:id="@+id/scene_info_electric_item_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/scene_info_electric_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:src="@drawable/item_delete"/>
        <ImageView
            android:id="@+id/scene_info_electric_item_img"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_3"
            android:layout_toRightOf="@id/scene_info_electric_item_delete"
            android:layout_marginLeft="@dimen/margin_15"
            android:src="@drawable/back_home"/>
        <TextView
            android:id="@+id/scene_info_electric_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@id/scene_info_electric_item_img"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="回家"
            android:textSize="20sp"
            android:textColor="@color/text_color"/>

        <Switch
            android:id="@+id/scene_info_electric_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_centerInParent="true"
            android:textOn="开"
            android:textOff="关"
            android:src="@drawable/left_menu_more"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"></View>
</RelativeLayout>
