<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tv_learn_activity_title_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_15"
                android:src="@drawable/back"
                android:onClick="tvlearnActivityBack"/>
            <TextView
                android:id="@+id/tv_learn_activity_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:text=""/>
            <TextView
                android:id="@+id/tv_learn_activity_title_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="20sp"
                android:textColor="@color/text_color_select"
                android:clickable="true"
                android:text="编辑"
                android:onClick="tvlearnActivityEdit"/>
            <TextView
                android:id="@+id/tv_learn_activity_title_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:text="保存"
                android:clickable="true"
                android:onClick="tvlearnActivitySave"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:scrollbarStyle="outsideOverlay" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="1dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_tv_learn_power"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_tv_learn_home"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长按界面按键进入学习模式"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb_check2"/>

                </LinearLayout>
                <EditText
                    android:id="@+id/et_learn_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="玄关灯"
                    android:textColor="@color/text_color"
                    android:background="@drawable/edittext_border_electric_name"
                    android:focusable="false"
                    android:textSize="20sp"
                    android:visibility="gone"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_tv_learn_tvav"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="TV/AV"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_tv_learn_menu"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/str_other_menu"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_tv_learn_back"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/str_other_back"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_tv_learn_mute"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"

                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/str_other_mute"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:background="@drawable/bg_double"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_tv_learn_vol_add"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/str_other_voladd"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_tv_learn_vol_sub"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/str_other_volsub"
                        android:textColor="#000000"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_tv_learn_up"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_tv_learn_left"
                            android:layout_width="50dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="20dip"
                            android:clickable="true"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/text_tv_learn_ok"
                            android:layout_width="60dp"
                            android:layout_height="60dp"

                            android:clickable="true"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/text_tv_learn_right"
                            android:layout_width="50dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="20dip"

                            android:clickable="true"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_tv_learn_down"
                            android:layout_width="120dp"
                            android:layout_height="50dp"

                            android:clickable="true"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout

                    android:layout_width="70dp"
                    android:layout_height="220dp"
                    android:background="@drawable/bg_double"
                    android:gravity="center"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/text_tv_learn_ch_sub"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/str_other_chsub"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_tv_learn_ch_add"
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/str_other_chadd"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>



