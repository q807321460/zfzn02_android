<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="#eee">

        <LinearLayout
            android:id="@+id/bottom_ll_main"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_iv_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bottom_home_normal"
                android:layout_marginBottom="@dimen/margin_3"/>

            <TextView
                android:id="@+id/bottom_tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_ll_area"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_iv_area"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bottom_area_normal"
                android:layout_marginBottom="@dimen/margin_3"/>
            <TextView
                android:id="@+id/bottom_tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="区域"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_ll_scene"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_iv_scene"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bottom_scene_normal"
                android:layout_marginBottom="@dimen/margin_3"/>
            <TextView
                android:id="@+id/bottom_tv_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="情景"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_ll_security"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_iv_security"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bottom_security_normal"
                android:layout_marginBottom="@dimen/margin_3"/>
            <TextView
                android:id="@+id/bottom_tv_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="安防"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
