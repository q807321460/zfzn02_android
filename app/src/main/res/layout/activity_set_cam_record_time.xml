<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/top_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/top_gray" >

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/png_left" />

        <TextView
            android:id="@+id/record_set_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/record_timing"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/HeadTitleTextStyle"/>

    </RelativeLayout>
    
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:background="@color/white"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp" >
	
	    <TextView
	        android:id="@+id/record_set_time_title2"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="@string/record_timing"
	        android:textColor="#393939"
	        android:textSize="@dimen/set_device_text_size" />

	    <ImageView
	        android:id="@+id/record_set_time_swich"
	        android:layout_width="44dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/switch_on" />
	</RelativeLayout>
	
    <LinearLayout 
        android:id="@+id/record_timing_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
		<RelativeLayout
		    android:id="@+id/record_set_time_startlayout"
		    android:layout_width="match_parent"
		    android:layout_height="44dp"
		    android:background="@color/white"
		    android:layout_marginTop="8dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp" >
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:text="@string/record_start_time"
		        android:textColor="#393939"
		        android:textSize="@dimen/set_device_text_size" />
		
		    <ImageView
		        android:id="@+id/record_set_time_1"
		        android:layout_width="@dimen/item_height"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/png_right_gray" />
		    
		    <TextView
		        android:id="@+id/record_set_time_starttext"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:text="00:00"
		        android:textColor="@color/text_gray"
		        android:layout_toLeftOf="@+id/record_set_time_1"
		        android:textSize="@dimen/set_device_text_size" />
		</RelativeLayout>
		
		<RelativeLayout
		    android:id="@+id/record_set_time_endlayout"
		    android:layout_width="match_parent"
		    android:layout_height="44dp"
		    android:background="@color/white"
		    android:layout_marginTop="3dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp" >
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:text="@string/record_end_time"
		        android:textColor="#393939"
		        android:textSize="@dimen/set_device_text_size" />
		
		    <ImageView
		        android:id="@+id/record_set_time_2"
		        android:layout_width="@dimen/item_height"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/png_right_gray" />
		    
		    <TextView
		        android:id="@+id/record_set_time_endtext"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:text="00:00"
		        android:textColor="@color/text_gray"
		        android:layout_toLeftOf="@+id/record_set_time_2"
		        android:textSize="@dimen/set_device_text_size" />
		</RelativeLayout>
		
		
		
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:layout_marginTop="3dp"
            android:paddingLeft="20dp"
		    android:paddingRight="20dp" >

            <TextView
                android:id="@+id/tv_repeat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/record_repeat"
                android:textColor="#393939"
                android:textSize="@dimen/set_device_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_repeat"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/v_sun"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/sunday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_mon"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/monday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_tue"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/tuesday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_wed"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/wednesday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_thu"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/thursday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_fri"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/friday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />

                <TextView
                    android:id="@+id/v_sat"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/week_bc"
                    android:gravity="center"
                    android:text="@string/saturday"
                    android:textColor="@color/white"
                    android:textSize="@dimen/week_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
	
    
	
    
</LinearLayout>