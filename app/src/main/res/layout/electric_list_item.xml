<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/electric_list_item_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/griditems_bg">
    <LinearLayout
        android:id="@+id/electric_list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_10"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_gv">
        <ImageView
            android:id="@+id/electric_list_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/electric_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="@dimen/margin_10"
            android:text=""/>

    </LinearLayout>
    <ImageView
        android:id="@+id/electric_list_item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
