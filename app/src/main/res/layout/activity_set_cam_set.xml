<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/top_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/top_gray" >

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/png_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setup"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/HeadTitleTextStyle" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="vertical">

	        <LinearLayout 
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/private_set_layout">

	            <RelativeLayout
	                android:id="@+id/cam_devinfolayout"
	                android:layout_width="match_parent"
	                android:layout_height="44dp"
	                android:layout_marginTop="10dp"
	                android:background="@color/white" >

	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="20dp"
	                    android:text="@string/cam_devinfo"
	                    android:textColor="#5e5e5e"
	                    android:textSize="16sp" />

	                <ImageView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/png_right_gray" />
	            </RelativeLayout>
	        
	        <RelativeLayout 
	             android:id="@+id/cam_syslayout"
	            android:layout_width="match_parent"
	            android:layout_marginTop="2px"
				android:layout_height="44dp"
				android:background="@color/white">
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:text="@string/cam_sys"
		            android:textColor="#5e5e5e"
		            android:textSize="16sp" />
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/png_right_gray"/>
	        </RelativeLayout>
	        
	         <RelativeLayout 
	             android:id="@+id/cam_netlayout"
	            android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginTop="2px"
				android:background="@color/white">
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:text="@string/cam_net"
		            android:textColor="#5e5e5e"
		            android:textSize="16sp" />
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/png_right_gray"/>
	        </RelativeLayout>
	        
	         <RelativeLayout 
	             android:id="@+id/cam_reclayout"
	            android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginTop="2px"
				android:background="@color/white">
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:text="@string/cam_record"
		            android:textColor="#5e5e5e"
		            android:textSize="16sp" />
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/png_right_gray"/>
	        </RelativeLayout>
	        
	         <RelativeLayout 
	             android:id="@+id/cam_seclayout"
	            android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginTop="2px"
				android:background="@color/white">
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:text="@string/cam_security"
		            android:textColor="#5e5e5e"
		            android:textSize="16sp" />
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/png_right_gray"/>
	        </RelativeLayout>
	        
	        <RelativeLayout 
	             android:id="@+id/cam_pic"
	            android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginTop="2px"
				android:background="@color/white">
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="20dp"
		            android:text="@string/picture"
		            android:textColor="#5e5e5e"
		            android:textSize="16sp" />
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/png_right_gray"/>
	        </RelativeLayout>
	        </LinearLayout>
	         

        </LinearLayout>
    </ScrollView>

</LinearLayout>