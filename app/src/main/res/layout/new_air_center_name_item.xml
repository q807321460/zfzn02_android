<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:id="@+id/air_center_name_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/air_center_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名称"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/edit_air_center_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改房间名称"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/air_center_room_name"
            android:layout_toEndOf="@+id/air_center_room_name" />
        <TextView
            android:id="@+id/air_center_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调编号"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</RelativeLayout>
