    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/air_center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swift_one_img"
        android:gravity="center"
        android:text="玄关灯"
        android:textColor="@color/text_color"
        android:background="@drawable/edittext_border_electric_name"
        android:focusable="false"
        android:textSize="20sp"
        android:visibility="gone"/>
</RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal">
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/left"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <View
               android:layout_width="match_parent"
               android:layout_height="20dp"
              />
           <LinearLayout
               android:id="@+id/left_ll_air_auto"
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:gravity="center"
               android:layout_weight="1"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/iv_air_auto"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_weight="1"
                   android:src="@drawable/air_wind_open"
                   android:layout_marginBottom="@dimen/margin_3"/>

               <TextView
                   android:id="@+id/bottom_tv_main"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#000"
                   android:text="开"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#ffffff"/>
           <LinearLayout
               android:id="@+id/left_ll_air_cold"
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:gravity="center"
               android:layout_weight="1"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/iv_air_cold"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_weight="1"
                   android:src="@drawable/air_cold"
                   android:layout_marginBottom="@dimen/margin_3"/>

               <TextView
                   android:id="@+id/tv_cold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#000"
                   android:text="制冷"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#ffffff"/>
           <LinearLayout
               android:id="@+id/left_ll_air_wind"
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:gravity="center"
               android:layout_weight="1"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/iv_air_wind"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_weight="1"
                   android:src="@drawable/air_wind"
                   android:layout_marginBottom="@dimen/margin_3"/>

               <TextView
                   android:id="@+id/bottom_tv_wind"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#000"
                   android:text="通风"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#ffffff"/>
           <LinearLayout
               android:id="@+id/left_ll_air_heat"
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:gravity="center"
               android:layout_weight="1"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/iv_air_heat"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_weight="1"
                   android:src="@drawable/air_heat"
                   android:layout_marginBottom="@dimen/margin_3"/>

               <TextView
                   android:id="@+id/bottom_tv_heat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#000"
                   android:text="制热"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="50dp"
               />

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="设定温度："/>
        <TextView android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_x="200dip"
            android:id="@+id/tv_Temp_Text"
            android:text="22°"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="50sp"
            android:width="100dip"
            android:layout_y="140dip"
            android:layout_gravity="center_vertical"></TextView>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_double"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_air_center_tempadd"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="120dp"

                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_tempadd"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_air_center_tempsub"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_tempsub"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />

            <LinearLayout
                android:id="@+id/ll_air_open"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="airCenterOpen"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_weight="1"
                    android:src="@drawable/air_wind_open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关"
                    android:textColor="#000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:id="@+id/ll_air_wind_low"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_weight="1"
                    android:src="@drawable/air_wind_low" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:text="低档"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:id="@+id/ll_air_wind_mid"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_weight="1"
                    android:src="@drawable/air_wind_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:text="中档"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:id="@+id/ll_air_wind_high"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/air_win_high"
                    android:layout_marginBottom="@dimen/margin_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:text="高档"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>



