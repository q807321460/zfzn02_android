<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/conf_wifi_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back"
                android:onClick="confWifiBack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="主机配网"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                android:editable="false"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layout_20"
        android:paddingRight="@dimen/layout_20"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/conf_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10"
            android:background="@drawable/edittext_border"
            android:textSize="18sp"
            android:textColorHint="@color/hint_text"
            android:inputType="phone"
            android:hint="SSID/WiFi名字"/>

        <EditText
            android:id="@+id/conf_wifi_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10"
            android:background="@drawable/edittext_border"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:textColorHint="@color/hint_text"
            android:hint="请输入密码"/>

        <Button
            android:id="@+id/conf_wifi_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_login"
            android:textColor="#ffffff"
            android:layout_marginTop="12dp"
            android:text="搜索Wifi"
            android:textSize="20dp"
            android:onClick="confWifiSearch"/>
        <Button
            android:id="@+id/conf_wifi_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_bg_login"
            android:textColor="#ffffff"
            android:clickable="true"
            android:text="确定"
            android:textSize="20sp"
            android:onClick="confWifiSure"/>
    </LinearLayout>

</LinearLayout>
