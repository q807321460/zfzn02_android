<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jia.znjj2.SwiftOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/swift_scene_title_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_15"
                android:src="@drawable/back"
                android:onClick="swiftSceneBack"/>
            <TextView
                android:id="@+id/swift_scene_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:text="电器名字"/>
            <TextView
                android:id="@+id/swift_scene_title_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:clickable="true"
                android:text="编辑"
                android:onClick="swiftSceneEdit"/>
            <TextView
                android:id="@+id/swift_scene_title_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:text="保存"
                android:clickable="true"
                android:onClick="swiftSceneSave"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/swift_scene_img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/electric_lamp_normal"/>
        <EditText
            android:id="@+id/swift_scene_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swift_scene_img"
            android:gravity="center"
            android:text="玄关灯"
            android:textColor="@color/text_color"
            android:background="@drawable/edittext_border_electric_name"
            android:focusable="false"
            android:textSize="20sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/swift_scene_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swift_scene_name"
            android:gravity="center"
            android:text="所属区域"
            android:textColor="@color/hint_text"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/swift_scene_scene_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swift_scene_room"
            android:gravity="center"
            android:text="无关联情景"
            android:textColor="@color/hint_text"
            android:textSize="20sp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/swift_scene_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:orientation="horizontal"
            android:layout_below="@+id/swift_scene_room">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hint_text"
                android:textSize="20sp"
                android:text="选择情景："/>
            <Spinner
                android:id="@+id/swift_scene_select_scene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            </Spinner>
        </LinearLayout>


        <com.jia.widget.SlipButton
            android:id="@+id/swift_scene_swift"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"

            android:layout_marginTop="@dimen/layout_30"
            android:layout_below="@+id/swift_scene_ll"
            android:src="@drawable/swift_off"/>


    </RelativeLayout>
</LinearLayout>
