<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jia.znjj2.SetSceneTimeActivity">

    <LinearLayout
        android:id="@+id/set_scene_time_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/set_scene_time_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_15"
                android:src="@drawable/back"
                android:onClick="myMasterNodeBack"/>
            <TextView
                android:id="@+id/set_scene_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:text="情景定时"/>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/set_scene_time_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/set_scene_time_title"
        android:background="@color/divider_color"></View>


    <ListView
        android:id="@+id/set_scene_time_list"
        android:layout_below="@+id/set_scene_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>




</RelativeLayout>


