<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_rl"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:minHeight="@dimen/item_height"
    android:background="@color/white">
    <ImageView 
        android:id="@+id/sensor_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/png_sensor_ctrl"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/sensor_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sensor_name"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            android:text="@string/afs_sensor_name" />

        <TextView
            android:id="@+id/sensor_type"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="8dp"
            android:text="@string/afs_sensor_type" />
    </LinearLayout>

    <Button
        android:id="@+id/sensor_btn"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:background="@drawable/png_right_gray"
        android:layout_centerVertical="true"
        android:focusable="false" />

    <View
        android:id="@+id/view_ifnew"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/png_new_green"/>



</RelativeLayout>