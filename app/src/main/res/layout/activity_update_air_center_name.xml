<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Warn_info_title_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_15"
                android:onClick="updateAirCentralNameBack"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/Warn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改空调所在房间信息"
                android:textColor="@color/text_color"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/air_center_more_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_15"
                android:clickable="true"
                android:onClick="SaveNewAirCenterName"
                android:text="保存"
                android:textColor="@color/text_color_select"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/warn_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
