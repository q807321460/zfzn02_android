<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:id="@+id/sensor_electric_item_rl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/warnelectricName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调编号"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_above="@+id/alarmTimename"
            android:layout_alignLeft="@+id/alarmTimename"
            android:layout_alignStart="@+id/alarmTimename" />
        <TextView
            android:id="@+id/alarmTimename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警时间："
            android:textSize="20sp"
            android:textColor="#708090"
            android:layout_alignBaseline="@+id/alarmTime"
            android:layout_alignBottom="@+id/alarmTime"
            android:layout_alignLeft="@+id/stateinfoname"
            android:layout_alignStart="@+id/stateinfoname" />
        <TextView
            android:id="@+id/alarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警时间"
            android:textSize="20sp"
            android:textColor="#708090"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/alarmTimename"
            android:layout_toEndOf="@+id/alarmTimename" />
        <TextView
            android:id="@+id/stateinfoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警状态："
            android:textSize="20sp"
            android:textColor="#708090"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/warn_info_item_img"
            android:layout_toEndOf="@+id/warn_info_item_img"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />
        <TextView
            android:id="@+id/stateinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警状态"
            android:textSize="20sp"
            android:textColor="#708090"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/stateinfoname"
            android:layout_toEndOf="@+id/stateinfoname" />

    </RelativeLayout>
    <TextView
        android:id="@+id/wanroomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间名"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp" />
    <CheckBox
        android:id="@+id/item_cb"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>